.head
   .head__container
      .head__logo
         a(href="/" class="logo__link")
            img(src="http://lorempixel.com/400/200" alt="logo" class="logo__img")
      .head__search
         input(type="text" placeholder="Поиск" class="search__input search__input-head")
      .head__buttons.head__buttons-left
         .button__item.button__item-head
            a(href="#" class="button__link")
               img(src="img/pencilwrite.svg" class="button__img button__img-pencil")
         .button__item.button__item-head
            a(href="#" class="button__link")
               img(src="img/multicrop.svg" class="button__img button__img-crop")
      .head__user
         a(href="#" class="user__link")
            img(src="http://lorempixel.com/400/200" class="user__avatar user__avatar-head")
            .user-head
               .user-head__name Austin Young
               .user-head__status Онлайн
      .head__buttons.head__buttons-right
         .button__item.button__item-head
            a(href="#" class="button__link")
               img(src="img/phone.svg" class="button__img button__img-phone")
         .button__item.button__item-head
            a(href="#" class="button__link")
               img(src="img/camera.svg" class="button__img button__img-camera")
         .button__item.button__item-head
            a(href="#" class="button__link")
               img(src="img/multicrop.svg" class="button__img button__img-crop")
